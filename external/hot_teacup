include(FetchContent)
Set(FETCHCONTENT_QUIET FALSE)
if (NOT TARGET hot_teacup)
    FetchContent_Declare(
            hot_teacup
            GIT_REPOSITORY https://github.com/kamchatka-volcano/hot_teacup.git
            GIT_TAG        09b0e98
            GIT_SHALLOW    ON
            GIT_PROGRESS TRUE
    )
    FetchContent_MakeAvailable(hot_teacup)
endif()